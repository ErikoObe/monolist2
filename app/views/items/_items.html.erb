<div class="container">
  <div class="container-inner inner-default clearfix">
    <% items.each do |item| %>
      <div class="item-box">
        <div class="image">
          
          <!--ここから追加-->
          <div class="img-wrap">
            <% if item['imageFlag'] == 1 %>
              <%= image_tag(item['mediumImageUrls'].first['imageUrl'].gsub('?_ex=128x128', '') ,  alt: item['itemName']) %>
            <% else %>
              <%= image_tag("no-image.png" , alt: item['itemName']) %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <%= item['itemName'] %>
          </p>
        </div>
           <!--ここまで追加-->
          
          <!--
          <div class="img-wrap">
            <% #TODO 商品画像 %>
            <%= image_tag("no-image.png" , alt: item['itemName']) %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <% #TODO 商品タイトル %>
            仮タイトル
          </p>
        </div>
        -->
        <div class="action clearfix">
          <!--課題：「Have」「Want」ボタンの実装-->
          <% if params[:type] == "Want" %>
            <%= link_to "" , ownerships_path(item_code: item['itemCode'] , type: "Want it") ,
                        :class => "btn-want_it btn btn-success btn-sm want_it",
                        :item_code => "want-#{item['itemCode']}",
                        :remote => true,
                        :method => :post %>
          <% else %>
            <%= link_to "" , ownerships_path(item_code: item['itemCode'] , type: "Want") ,
                        :class => "btn-want btn btn-danger btn-sm want",
                        :item_code => "want-#{item['itemCode']}",
                        :remote => true,
                        :method => :post %>
          <% end %>
          <% if params[:type] == "Have" %>
            <%= link_to "" , ownerships_path(item_code: item['itemCode'] , type: "Have it") ,
                        :class => "btn-have_it btn btn-success btn-sm have_it",
                        :item_code => "have-#{item['itemCode']}",
                        :remote => true,
                        :method => :post %>
          <% else %>
            <%= link_to "" , ownerships_path(item_code: item['itemCode'] , type: "Have") ,
                        :class => "btn-have btn btn-warning btn-sm have",
                        :item_code => "have-#{item['itemCode']}",
                        :remote => true,
                        :method => :post %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
